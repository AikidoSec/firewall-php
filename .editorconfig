# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

# Go files (use tabs as per Go convention)
[*.go]
indent_style = tab
indent_size = 4

[go.mod]
indent_style = tab
indent_size = 4

# C/C++ files (matches .clang-format settings)
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{conf,cfg,ini}]
indent_style = space
indent_size = 2

[*.proto]
indent_style = space
indent_size = 2

[Dockerfile*]
indent_style = space
indent_size = 2
